<Window x:Class="Color_Finder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Color_Finder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/img/pozadi.jpg"/>
        </Grid.Background>
        <Image x:Name="OBR" HorizontalAlignment="Left" Height="271" Margin="166,22,0,0" VerticalAlignment="Top" Width="491"/>
        <TextBlock x:Name="INFO" HorizontalAlignment="Left" Margin="183,348,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="472" Height="65" FontSize="22" FontWeight="Bold" Foreground="#FFE8E8E8">
            <TextBlock.Background>
                <SolidColorBrush Color="#FF080707" Opacity="0.8"/>
            </TextBlock.Background>
        </TextBlock>
        <Button Content="Vyber Obr." HorizontalAlignment="Left" Margin="366,300,0,0" VerticalAlignment="Top" Width="106" Height="30" Background="#FFFFFCFC" FontWeight="Bold" Click="Button_Click"/>

    </Grid>
</Window>
